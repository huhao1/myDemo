<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.PowerMapper">

    <resultMap id="BaseResultMap" type="com.example.domain.Power">
        <id column="id" property="id" />
        <result column="code" property="code" />
        <result column="name" property="name" />
        <result column="url" property="url" />
        <result column="type" property="type" />
        <result column="parent_id" property="parentId" />
        <result column="level" property="level" />
        <result column="sort" property="sort" />
    </resultMap>

    <sql id="Base_Column_List">
        id, code, name, url, type, parent_id, level, sort
    </sql>

    <select id="getListByRoleId" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
            p.id,
            p.CODE,
            p.NAME,
            p.url,
            p.type,
            p.parent_id,
            p.`level`,
            p.sort
        FROM
            power p
            LEFT JOIN role_power rp ON p.id = rp.power_id
        WHERE
            rp.role_id = #{roleId,jdbcType=VARCHAR}
    </select>

</mapper>
